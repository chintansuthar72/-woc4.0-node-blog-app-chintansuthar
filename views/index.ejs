<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chintan Suthar</title>
    <%- include("./indexStyle") %>
  </head>
  <body>
    <div class="add-post">
      <a href="/create" style="height: 40px">
        <img
          src="add.png"
          alt="create new blog"
          height="40px"
          width="40px"
        />
      </a>
    </div>
    <header>
      <div class="profile-image"></div>
      <div class="profile-name">Chintan Suthar</div>
      <div class="subtext">Welcome to my blogs!</div>
    </header>
    <div class="main">
      <div class="main-container">
          <% if(blogs.length){ %>
            <%blogs.forEach((blog) => { %>
              <a href="/blogs/<%= blog._id%>" >
                <div class="post">
                    <div id="post-image"  data-image = <%= blog.image %>></div>
                    <div class="post-content">
                        <div class="post-content-title"><%= blog.title %></div>
                        <div class="post-content-text"><%= blog.body %></div>
                    </div>
                </div>
              </a>
             <% }) %>
          <% } else { %>
            <div class="post">
                <div class="post-content">
                    <div class="post-content-title">No blogs</div>
                    <div class="post-content-text"></div>
                </div>
            </div>
          <% } %>
      </div>
    </div>
    <footer>
        <p>Made with &#x1F9E1; by Chintan Suthar</p>
    </footer>
    <script>
      const postImage = document.getElementById("post-image");
      postImage.style.backgroundImage = `url("/uploads/${postImage.dataset.image}")`
    </script>
  </body>
</html>